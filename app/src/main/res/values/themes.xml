<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.CrackBasketballStats" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="cdview" parent="Base.CardView" >
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Header3">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>

    </style>
    <style name="text_input_layout_error_text_appearance" parent="TextAppearance.Design.Error">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="Theme.CrackBasketballStats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="CrackBasketballStats_TextAppearance_Toolbar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Ikirori_Widget_Toolbar" parent="Widget.MaterialComponents.Toolbar">

    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="custom_fab">
        <item name="android:background">@drawable/ic_baseline_add_24</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    <style name="toolbar_light_title_text_appearance">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="toolbar_light">
        <item name="android:background">@color/colorWhite</item>
        <item name="navigationIcon">@drawable/ic_baseline_arrow_back_24</item>
        <item name="titleTextAppearance">@style/toolbar_light_title_text_appearance</item>
        <item name="titleTextColor">@color/black</item>
    </style>


</resources>